{
  "compilerOptions": {
    "target":"ES2020",
    "module": "commonjs",                    
    "lib": [
      "DOM",
      "ES2020",
    ],                     
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules/",
    "dist/",
    "build/",
  ]
}